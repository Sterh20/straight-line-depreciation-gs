{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["standard-with-typescript"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": ["tsconfig.json"]
  },
  "rules": {
    "semi": "off",
    "@typescript-eslint/semi": ["error", "always"],
    "no-unexpected-multiline": "error"
  }
}
